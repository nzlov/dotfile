# BACKGROUND
background {
    monitor =
    blur_passes = 3
    contrast = 0.8916
    brightness = 0.8172
    vibrancy = 0.1696
    vibrancy_darkness = 0.0
    color = rgba({{.RGB2}},1.0)
}

# GENERAL
general {
    no_fade_in = false
    grace = 0
    disable_loading_bar = false
}

# INPUT FIELD
input-field {
    monitor =
    size = 250, 60
    outline_thickness = 2
    dots_size = 0.2 # Scale of input-field height, 0.2 - 0.8
    dots_spacing = 0.2 # Scale of dots' absolute size, 0.0 - 1.0
    dots_center = true
    outer_color = rgba({{.RGB2}},1.0)
    inner_color = rgba({{.RGB1}},1.0)
    font_color = rgba({{.RGB0}},1.0)
    fade_on_empty = false
    font_family = JetBrains Mono Nerd, SF Pro Display Bold
    placeholder_text = <i><span foreground="##ffffff99">Use Me</span></i>
    hide_input = false
    position = 0, -120
    halign = center
    valign = center
}

# TIME
label {
    monitor =
    text = cmd[update:1000] echo "$(date +"%-I:%M%p")"
    color = rgba({{.RGB0}},1.0)
    font_size = 130
    font_family = JetBrains Mono Nerd, SF Pro Display Bold
    position = 0, -140
    halign = center
    valign = top
}

# DATE
label {
    monitor =
    text = cmd[update:1000] echo "<span>$(date '+%A, %d %B')</span>"
    color = rgba({{.RGB0}},1.0)
    font_size = 30
    font_family = JetBrains Mono Nerd, SF Pro Display Bold
    position = 0, 140
    halign = center
    valign = center
}

